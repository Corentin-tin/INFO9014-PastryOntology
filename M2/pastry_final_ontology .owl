#################################################################

###  http://www.semanticweb.org/pastry#cinnamon
:cinnamon rdf:type owl:NamedIndividual ,
                   :Food .


###  http://www.semanticweb.org/pastry#crepes
:crepes rdf:type owl:NamedIndividual ,
                 :Recipe ;
        :has_step <http://www.semanticweb.org/pastry#3.1> .


###  http://www.semanticweb.org/pastry#2_pincées
<http://www.semanticweb.org/pastry#2_pincées> rdf:type owl:NamedIndividual ,
                                                       :Quantity ;
                                              :quantity_of_food :cinnamon .


###  http://www.semanticweb.org/pastry#3.1
<http://www.semanticweb.org/pastry#3.1> rdf:type owl:NamedIndividual ,
                                                 :Step ;
                                        :step_with_quantity <http://www.semanticweb.org/pastry#2_pincées> .


#################################################################
#    General axioms
#################################################################

[ rdf:type owl:AllDisjointClasses ;
  owl:members ( :Food
                :Kitchen_tool
                :Recipe
                :Step
              )
] .


